
@{
    ViewData["Title"] = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Payment</h1>

<h2> Donation Total: @String.Format("{0:c}", ViewBag.Total) </h2>

<form method="post">
    <script src="https://checkout.stripe.com/checkout.js"
            class="stripe-button" data-amount="@ViewBag.CentsTotal"
            data-name="Georgian College Donation Center"
            data-currency="cad"
            data-key="@ViewBag.PublishableKey">
    </script>
</form>