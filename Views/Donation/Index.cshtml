@model IEnumerable<Assignment1.Models.Courses>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Select Course from which you want to help Students</h1>

<section>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-lg-4 mb-3">
                <div class="card mb-3 text-center h-75">
                    <div class="card-body">
                       <a asp-controller="Donation" asp-action="Browse" asp-route-course="@item.Name">@item.Name</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>       